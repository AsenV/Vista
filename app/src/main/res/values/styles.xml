<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Exemplo de tema customizado para o DatePickerDialog -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <!-- Personalize conforme necessÃ¡rio -->
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Base application theme (Material Components) -->
    <style name="Base.Theme.Vista" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Example: -->
        <item name="colorPrimary">@color/my_app_primary</item>
        <item name="colorSecondary">@color/my_app_secondary</item>
        <!-- Texto -->
        <item name="android:textColor">@color/gray</item>
        <!-- Hora -->
        <item name="android:textColorPrimary">@color/lightgray</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <!-- Minuto e Icones -->
        <item name="android:textColorSecondary">@color/lightgray</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- Numeros -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Barra de Status -->
    <!-- <item name="colorPrimaryDark">@color/colorPrimary</item> -->
</style>

<!-- Your app's main theme (inherits from Base) -->
    <style name="Theme.Vista" parent="Base.Theme.Vista" />
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>